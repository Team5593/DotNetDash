<UserControl x:Class="DotNetDash.CameraViews.LocalCameraView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotNetDash.CameraViews"
        mc:Ignorable="d"
        Height="300" Width="300">
    <UserControl.Resources>
        <local:BitmapConverter x:Key="BitmapConverter" />
    </UserControl.Resources>
    <DockPanel>
        <ComboBox x:Name="Combobox" DockPanel.Dock="Top" ItemsSource="{Binding CameraDevices}" SelectedItem="{Binding SelectedFilter, Mode=OneWayToSource}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Image Source="{Binding CameraView, Converter={StaticResource BitmapConverter}}" />
    </DockPanel>
</UserControl>
